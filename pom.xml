<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.joe.quizzy</groupId>
    <artifactId>quizzy-parent</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>

    <parent>
        <groupId>com.trib3</groupId>
        <artifactId>parent-pom</artifactId>
        <version>[1.31.1,1.32-SNAPSHOT)</version>
    </parent>

    <properties>
        <version.leakycauldron>[1.31.1,1.32-SNAPSHOT)</version.leakycauldron>

        <version.argon>2.11</version.argon>
        <version.google-http-client>1.41.7</version.google-http-client>
        <version.google-oauth-client>1.33.3</version.google-oauth-client>
        <version.jakarta-mail>1.6.7</version.jakarta-mail>
        <version.ktor>2.0.1</version.ktor>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.google.http-client</groupId>
                <artifactId>google-http-client</artifactId>
                <version>${version.google-http-client}</version>
                <exclusions>
                    <exclusion>
                        <groupId>org.apache.httpcomponents</groupId>
                        <artifactId>httpclient</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>org.apache.httpcomponents</groupId>
                        <artifactId>httpcore</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>com.google.http-client</groupId>
                <artifactId>google-http-client-gson</artifactId>
                <version>${version.google-http-client}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <modules>
        <module>api</module>
        <module>emails</module>
        <module>graphql</module>
        <module>client</module>
        <module>persistence</module>
        <module>server</module>
    </modules>
</project>
