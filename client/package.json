{
  "name": "quizzy",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "serve": "vite",
    "build": "vite build",
    "test:unit": "vitest run --coverage",
    "lint": "eslint --max-warnings 0 --fix src tests *.js",
    "generate": "graphql-codegen",
    "test": "npm run test:unit"
  },
  "dependencies": {
    "@apollo/client": "3.11.8",
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/typescript": "4.0.9",
    "@vue/apollo-components": "4.0.0",
    "@vue/apollo-option": "4.2.0",
    "core-js": "3.38.1",
    "graphql": "16.9.0",
    "graphql-combine-query": "1.2.4",
    "moment-timezone": "0.5.45",
    "papaparse": "5.4.1",
    "pinia": "^2.2.2",
    "vue": "3.5.4",
    "vue-router": "4.4.4",
    "vuetify": "3.7.1"
  },
  "devDependencies": {
    "@graphql-eslint/eslint-plugin": "3.20.1",
    "@rollup/plugin-graphql": "2.0.4",
    "@types/papaparse": "5.3.14",
    "typescript-eslint": "8.4.0",
    "@vitejs/plugin-vue": "5.1.3",
    "@vitest/coverage-v8": "^2.0.5",
    "@vue/eslint-config-prettier": "9.0.0",
    "@vue/eslint-config-typescript": "13.0.0",
    "@vue/test-utils": "2.4.6",
    "eslint": "8.57.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-vue": "9.28.0",
    "flush-promises": "1.0.2",
    "graphql-tag": "2.12.6",
    "jsdom": "^25.0.0",
    "lint-staged": "15.2.10",
    "mock-apollo-client": "1.3.1",
    "prettier": "3.3.3",
    "sass": "^1.78.0",
    "typescript": "5.5.4",
    "vite": "5.4.3",
    "vite-plugin-vuetify": "^2.0.4",
    "vitest": "^2.0.1"
  },
  "overrides": {
    "word-wrap": "npm:@aashutoshrathi/word-wrap",
    "optionator": "0.9.3",
    "semver": "7.5.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": [
      "plugin:vue/vue3-recommended",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "@vue/prettier",
      "@vue/eslint-config-prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "ignorePatterns": [
      "**/generated/**"
    ],
    "rules": {
      "vue/custom-event-name-casing": [
        "error",
        {
          "ignores": [
            "/^[a-z]+(?:-[a-z]+)*:[a-z]+(?:-[a-z]+)*$/u"
          ]
        }
      ],
      "vue/valid-v-slot": [
        "error",
        {
          "allowModifiers": true
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      },
      {
        "files": [
          "*.gql"
        ],
        "extends": "plugin:@graphql-eslint/operations-recommended",
        "parserOptions": {
          "schema": "./target/dependency/schema.graphql",
          "operations": "./src/**/*.gql",
          "skipGraphQLConfig": true
        }
      },
      {
        "files": [
          "*.vue"
        ]
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx,gql}": [
      "eslint",
      "git add"
    ]
  }
}
