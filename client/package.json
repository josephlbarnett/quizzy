{
  "name": "quizzy",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "test:unit": "vue-cli-service test:unit --runInBand",
    "lint": "vue-cli-service lint",
    "generate": "graphql-codegen",
    "test": "npm run test:unit"
  },
  "dependencies": {
    "@babel/preset-typescript": "^7.16.7",
    "@graphql-codegen/cli": "^2.6.1",
    "@graphql-codegen/typescript": "^2.4.3",
    "@types/moment-timezone": "^0.5.30",
    "core-js": "^3.21.0",
    "eslint-plugin-graphql": "^4.0.0",
    "graphql-combine-query": "^1.2.3",
    "moment-timezone": "^0.5.34",
    "papaparse": "^5.3.1",
    "vue": "^2.6.14",
    "vue-apollo": "^3.1.0",
    "vue-class-component": "^7.2.6",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.5.3",
    "vuetify": "^2.6.3"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/papaparse": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@vue/cli-plugin-babel": "^5.0.0-rc.3",
    "@vue/cli-plugin-eslint": "^5.0.0-rc.3",
    "@vue/cli-plugin-router": "^5.0.0-rc.3",
    "@vue/cli-plugin-typescript": "^5.0.0-rc.3",
    "@vue/cli-plugin-unit-jest": "^5.0.0-rc.3",
    "@vue/cli-service": "^5.0.0-rc.3",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^9.0.0",
    "@vue/test-utils": "1.3.0",
    "@vue/vue2-jest": "^27.0.0-alpha.4",
    "babel-jest": "^27.5.1",
    "cache-loader": "^4.1.0",
    "eslint": "^8.9.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^7.20.0",
    "graphql-tag": "^2.12.6",
    "jest": "^27.5.1",
    "jest-transform-graphql": "^2.1.0",
    "lint-staged": "^12.3.4",
    "mock-apollo-client": "^0.7.0",
    "prettier": "^2.5.1",
    "sass": "~1.32.13",
    "sass-loader": "^12.6.0",
    "ts-jest": "^27.1.3",
    "typescript": "~4.5.5",
    "vue-cli-plugin-apollo": "~0.22.2",
    "vue-cli-plugin-vuetify": "^2.4.5",
    "vue-template-compiler": "^2.6.14",
    "vuetify-loader": "^1.7.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "@vue/prettier",
      "@vue/eslint-config-prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "ignorePatterns": [
      "**/generated/**"
    ],
    "rules": {
      "vue/custom-event-name-casing": [
        "error",
        {
          "ignores": [
            "/^[a-z]+(?:-[a-z]+)*:[a-z]+(?:-[a-z]+)*$/u"
          ]
        }
      ],
      "vue/valid-v-slot": [
        "error",
        {
          "allowModifiers": true
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
